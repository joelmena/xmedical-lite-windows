@model IEnumerable<XMedicalLite.Models.Paciente>

@{
    ViewBag.Title = "Index";
}

<div class="mt-2">
    <p>
        @Html.ActionLink("Nuevo paciente", "Create", null, new { @class = "btn btn-primary" })
    </p>
</div>

<div>
    <form action="/Pacientes/Index" method="get">
        <input type="text" name="busqueda"/>
        <input type="submit" value="Buscar" />
    </form>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sexo.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaNacimiento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cedula)
        </th>
       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellidos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Sexo.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaNacimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cedula)
        </td>
        
        <td>
            @Html.ActionLink("Abrir expediente", "Create", "Expedientes", new { id = item.PacienteID }, htmlAttributes: new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Edit", "Edit", new { id=item.PacienteID }, htmlAttributes: new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.PacienteID }, htmlAttributes: new { @class = "btn btn-primary" })
        </td>
    </tr>
}

</table>
