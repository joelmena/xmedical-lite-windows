            <strong>
                Estado civil:
            </strong>
            @Model.EstadoCivil.Descripcion
        </div>
    </div>
    <div class="row">
        <div class="col">
            <strong>
                Direccion:
            </strong>
            @Model.Direccion
        </div>
        <div class="col">
            <strong>
                Telefono:
            </strong>
            @Model.Telefono
        </div>
        <div class="col">

        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col">
            <strong>
                Aseguradora:
            </strong>
            @Model.Aseguradora
